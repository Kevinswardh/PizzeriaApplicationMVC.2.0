@model Products

@{
    ViewData["Title"] = "Delete product";
}
@section containerFluid
    {

    <div class="header shadow p-3 mb-5 bg-white rounded">
        <div class="mt-4 p-5 text-white ml-5 rounded">
        </div>
    </div>

}

<div class="text-center pb-5">
    <h1>Delete</h1>
</div>
<div class="container w-50 pb-5">
    <div class="card-body shadow p-3 mb-5 bg-white rounded ">
        <div class="row text">
            <div class="col-md-8 offset-2">
                <p>
                    <h1 class="text-center">Delete confimation for @Model.PizzaName</h1>
                </p>
                <div class="row">
                    <div class="col-md-8 offset-2">
                            <div class="form-group pb-5">
                                <label asp-for="PizzaName" class="control-label"></label>
                                <input asp-for="PizzaName" class="form-control" />
                                <span asp-validation-for="PizzaName" class="text-danger"></span>
                            </div>
                            <div class="form-group pb-5">
                                <label asp-for="PizzaIngre" class="control-label"></label>
                                <input asp-for="PizzaIngre" class="form-control" />
                                <span asp-validation-for="PizzaIngre" class="text-danger"></span>
                            </div>
                            <div class="form-group pb-5">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                            </form>
                                <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                            </div>
                    </div>
                </div>
            </div>
        </div>

   



   



    </div>
</div>